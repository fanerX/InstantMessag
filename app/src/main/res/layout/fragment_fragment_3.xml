<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="                  趣味一语"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/refresh_image"
                android:src="@drawable/refresh_blue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"/>
            <ImageView
                android:id="@+id/control_image"
                android:src="@drawable/drop_down"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/text_daily_sentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="那些哭着喊着要走的人从来不会真的离开,真的要离开的人会挑一个风和日丽的下午,披一件大衣,不知不觉地消失"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:visibility="gone"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_letter"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>